using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.Entity;
using System.Drawing;
using System.Linq;
using System.Runtime.Remoting.Contexts;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Globalization;
using CodeFirstDBFirst.Models;

namespace CodeFirstDBFirst
{
    public partial class Form1 : Form
    {

        private QuanLySinhVien dbContext;
        private string previousStudentID = string.Empty;
        public Form1()
        {
            InitializeComponent();
        }
        private int GetSelectedRow(string studentID)
        {
            for (int i = 0; i < dgvSV.Rows.Count; i++)
            {
                if (dgvSV.Rows[i].Cells[0].Value != null &&
                    dgvSV.Rows[i].Cells[0].Value.ToString() == studentID)
                {
                    return i;
                }
            }
            return -1;
        }
        private void btnExit_Click(object sender, EventArgs e)
        {
            DialogResult result = MessageBox.Show("Bạn có muốn thoát chương trình",
                "Thông báo", MessageBoxButtons.OKCancel,
                MessageBoxIcon.Question);
            if (result == DialogResult.OK)
            {
                MessageBox.Show("Cám ơn bạn đã sử dụng chương trình");
                Close();
            }
            else if (result == DialogResult.No)
            {
                MessageBox.Show("Mời bạn tiếp tục sử dụng chương trình");
            }
        }

        private void btnDelete_Click(object sender, EventArgs e)
        {
            if (string.IsNullOrWhiteSpace(txtID.Text))
            {
                MessageBox.Show("Vui lòng chọn sinh viên cần xóa!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return;
            }

            string studentID = txtID.Text;
            var studentToDelete = dbContext.Student.Find(studentID);

            if (studentToDelete == null)
            {
                MessageBox.Show("Không tìm thấy sinh viên cần xóa trong CSDL!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                BindGrid();
                return;
            }

            var result = MessageBox.Show($"Bạn có chắc chắn muốn xóa sinh viên '{studentToDelete.FullName}'?", "Xác nhận xóa", MessageBoxButtons.YesNo, MessageBoxIcon.Warning);
            if (result == DialogResult.Yes)
            {
                dbContext.Student.Remove(studentToDelete);
                dbContext.SaveChanges();

                BindGrid();
                ResetControls();
                MessageBox.Show("Xóa sinh viên thành công!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Information);
            }
        }

        private void BindGrid()
        {
            var students = dbContext.Student
                .Select(s => new
                {
                    MaSoSV = s.StudentID,
                    HoTen = s.FullName,
                    DiemTB = s.AverageScore,
                    TenKhoa = s.Faculty.FacultyName,
                    MaKhoa = s.FacultyID
                })
                .ToList();

            dgvSV.DataSource = students;

            dgvSV.Columns["MaSoSV"].HeaderText = "Mã Số SV";
            dgvSV.Columns["HoTen"].HeaderText = "Họ Tên";
            dgvSV.Columns["DiemTB"].HeaderText = "Điểm TB";
            dgvSV.Columns["TenKhoa"].HeaderText = "Khoa";
            dgvSV.Columns["MaKhoa"].Visible = false;
        }

        private void Form1_Load(object sender, EventArgs e)
        {

            dbContext = new QuanLySinhVien();
            // txtMaSo is now always editable as per user request

            // Load faculties into ComboBox
            var faculties = dbContext.Faculty.ToList();
            cbxFaculty.DataSource = faculties;
            cbxFaculty.DisplayMember = "FacultyName";
            cbxFaculty.ValueMember = "FacultyID";

            // Load students into DataGridView
            BindGrid();

            // Connect events that might not have been set in the designer
            this.btnAdd.Click += new System.EventHandler(this.btnAdd_Click);
            this.btnEdit.Click += new System.EventHandler(this.btnEdit_Click);
            this.btnDelete.Click += new System.EventHandler(this.btnDelete_Click);
            this.dgvSV.CellClick += new System.Windows.Forms.DataGridViewCellEventHandler(this.dgvSV_CellContentClick);
        }

        private bool ValidateAndGetInput(out string studentID, out string fullName, out double averageScore, out int facultyId)
        {
            studentID = null;
            fullName = null;
            averageScore = 0;
            facultyId = 0;

            if (string.IsNullOrWhiteSpace(txtID.Text) || string.IsNullOrWhiteSpace(txtName.Text) || string.IsNullOrWhiteSpace(txtAVG.Text))
            {
                MessageBox.Show("Vui lòng nhập đầy đủ thông tin (Mã SV, Họ tên, Điểm)!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return false;
            }

            // Always check length for StudentID as per user request
            if (txtID.Text.Length != 10)
            {
                MessageBox.Show("Mã số sinh viên phải có đúng 10 kí tự!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return false;
            }

            if (!double.TryParse(txtAVG.Text, NumberStyles.Any, CultureInfo.CurrentCulture, out averageScore))
            {
                MessageBox.Show("Điểm trung bình phải là một con số hợp lệ!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return false;
            }

            if (averageScore < 0 || averageScore > 10)
            {
                MessageBox.Show("Điểm trung bình phải từ 0 đến 10!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return false;
            }

            if (cbxFaculty.SelectedValue == null)
            {
                MessageBox.Show("Vui lòng chọn một khoa!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return false;
            }

            studentID = txtID.Text;
            fullName = txtName.Text;
            facultyId = (int)cbxFaculty.SelectedValue;
            return true;
        }

        private void btnAdd_Click(object sender, EventArgs e)
        {
            if (!ValidateAndGetInput(out var studentID, out var fullName, out var averageScore, out var facultyId)) return;

            var existingStudent = dbContext.Student.Find(studentID);
            if (existingStudent != null)
            {
                MessageBox.Show("Mã số sinh viên đã tồn tại!",
                    "Lỗi",
                    MessageBoxButtons.OK,
                    MessageBoxIcon.Error);
                return;
            }

            var newStudent = new Student
            {
                StudentID = studentID,
                FullName = fullName,
                FacultyID = facultyId,
                AverageScore = averageScore
            };

            dbContext.Student.Add(newStudent);
            dbContext.SaveChanges();

            BindGrid();
            ResetControls();
            MessageBox.Show("Thêm mới dữ liệu thành công!",
                "Thông báo",
                MessageBoxButtons.OK,
                MessageBoxIcon.Information);
        }

        private void btnEdit_Click(object sender, EventArgs e)
        {
            if (string.IsNullOrWhiteSpace(txtID.Text))
            {
                MessageBox.Show("Vui lòng chọn sinh viên cần sửa!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return;
            }

            if (!ValidateAndGetInput(out var currentStudentID, out var fullName, out var averageScore, out var facultyId)) return;

            // If StudentID has changed, it's treated as deleting the old and adding a new one
            if (previousStudentID != null && previousStudentID != currentStudentID)
            {
                // Check if the new StudentID already exists
                if (dbContext.Student.Any(s => s.StudentID == currentStudentID))
                {
                    MessageBox.Show("Mã số sinh viên mới đã tồn tại! Vui lòng chọn Mã số khác.", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                    return;
                }

                // Confirm with user before changing primary key
                var confirmResult = MessageBox.Show(
                    $"Bạn có chắc chắn muốn thay đổi Mã số SV từ '{previousStudentID}' thành '{currentStudentID}'? " +
                    "Thao tác này sẽ xóa sinh viên cũ và tạo mới sinh viên với mã số mới.",
                    "Xác nhận thay đổi Mã số SV",
                    MessageBoxButtons.YesNo,
                    MessageBoxIcon.Warning);

                if (confirmResult == DialogResult.No)
                {
                    txtID.Text = previousStudentID; // Revert StudentID in textbox
                    return;
                }

                // 1. Delete the old student
                var oldStudent = dbContext.Student.Find(previousStudentID);
                if (oldStudent != null)
                {
                    dbContext.Student.Remove(oldStudent);
                    dbContext.SaveChanges(); // Save changes for deletion first
                }

                // 2. Add the new student with updated ID and details
                var newStudent = new Student
                {
                    StudentID = currentStudentID,
                    FullName = fullName,
                    FacultyID = facultyId,
                    AverageScore = averageScore
                };
                dbContext.Student.Add(newStudent);
            }
            else // StudentID has not changed, proceed with normal update
            {
                var studentToUpdate = dbContext.Student.Find(currentStudentID);
                if (studentToUpdate == null)
                {
                    MessageBox.Show("Không tìm thấy sinh viên cần sửa trong CSDL!", "Lỗi", MessageBoxButtons.OK, MessageBoxIcon.Error);
                    BindGrid();
                    return;
                }
                studentToUpdate.FullName = fullName;
                studentToUpdate.FacultyID = facultyId;
                studentToUpdate.AverageScore = averageScore;
            }

            dbContext.SaveChanges(); // Save all changes (new student or updated existing)

            BindGrid();
            ResetControls();
            MessageBox.Show("Cập nhật dữ liệu thành công!", "Thông báo", MessageBoxButtons.OK, MessageBoxIcon.Information);
        }

        private void dgvSV_CellContentClick(object sender, DataGridViewCellEventArgs e)
        {
            if (e.RowIndex >= 0 && e.RowIndex < dgvSV.Rows.Count)
            {
                var row = dgvSV.Rows[e.RowIndex];

                string studentID = row.Cells["MaSoSV"].Value?.ToString();
                previousStudentID = studentID; // Store original ID for potential primary key change

                txtID.Text = studentID;
                txtName.Text = row.Cells["HoTen"].Value?.ToString();
                txtAVG.Text = row.Cells["DiemTB"].Value?.ToString();

                var maKhoaValue = row.Cells["MaKhoa"].Value;
                if (maKhoaValue != null)
                {
                    cbxFaculty.SelectedValue = maKhoaValue;
                }

                // txtMaSo remains editable as per user request
            }
        }
        private void ResetControls()
        {
            previousStudentID = null;
            txtID.Text = "";
            txtName.Text = "";
            txtAVG.Text = "";
            if (cbxFaculty.Items.Count > 0)
            {
                cbxFaculty.SelectedIndex = 0;
            }
            txtID.Focus();
            txtID.ReadOnly = false; // Ensure editable
        }
    }
}
