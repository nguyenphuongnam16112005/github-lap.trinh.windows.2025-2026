using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Data.Entity;
using System.Drawing;
using System.Linq;
using System.Runtime.Remoting.Contexts;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;
using System.Globalization;
using CodeFirstDBFirst.Models;

namespace CodeFirstDBFirst
{
    public partial class Form1 : Form
    {

        private QuanLySinhVien dbContext;
        private string previousStudentID = string.Empty;
        public Form1()
        {
            InitializeComponent();
        }
        private int GetSelectedRow(string studentID)
        {
            for (int i = 0; i < dgvSV.Rows.Count; i++)
            {
                if (dgvSV.Rows[i].Cells[0].Value != null &&
                    dgvSV.Rows[i].Cells[0].Value.ToString() == studentID)
                {
                    return i;
                }
            }
            return -1;
        }
        private void btnExit_Click(object sender, EventArgs e)
        {
            DialogResult result = MessageBox.Show("Bạn có muốn thoát chương trình",
                "Thông báo", MessageBoxButtons.OKCancel,
                MessageBoxIcon.Question);
            if (result == DialogResult.OK)
            {
                MessageBox.Show("Cám ơn bạn đã sử dụng chương trình");
                Close();
            }
            else if (result == DialogResult.No)
            {
                MessageBox.Show("Mời bạn tiếp tục sử dụng chương trình");
            }
        }

        private void btnDelete_Click(object sender, EventArgs e)
        {
            try
            {
                int selectedRow = GetSelectedRow(txtID.Text);
                if (selectedRow == -1)
                {
                    throw new Exception("Thông tìm thấy MSSV cần xóa!");
                }
                else
                {
                    DialogResult dr = MessageBox.Show("Bạn có muốn xóa ?",
                        "YES/NO",
                        MessageBoxButtons.YesNo,
                        MessageBoxIcon.Question);
                    if (dr == DialogResult.Yes)
                    {
                        dgvSV.Rows.RemoveAt(selectedRow);
                        MessageBox.Show("Xóa Sinh Viên thành công!",
                            "Thông báo",
                            MessageBoxButtons.OK);
                    }
                }
            }
            catch (Exception ex)
            {
                MessageBox.Show(ex.Message, "Lỗi!",
                    MessageBoxButtons.OK,
                    MessageBoxIcon.Error);
            }
        }

        private void BindGrid()
        {
            var students = dbContext.Student
                .Select(s => new
                {
                    MaSoSV = s.StudentID,
                    HoTen = s.FullName,
                    DiemTB = s.AverageScore,
                    TenKhoa = s.Faculty.FacultyName,
                    MaKhoa = s.FacultyID
                })
                .ToList();

            dgvSV.DataSource = students;

            dgvSV.Columns["MaSoSV"].HeaderText = "Mã Số SV";
            dgvSV.Columns["HoTen"].HeaderText = "Họ Tên";
            dgvSV.Columns["DiemTB"].HeaderText = "Điểm TB";
            dgvSV.Columns["TenKhoa"].HeaderText = "Khoa";
            dgvSV.Columns["MaKhoa"].Visible = false;
        }

        private void Form1_Load(object sender, EventArgs e)
        {

            dbContext = new QuanLySinhVien();
            // txtMaSo is now always editable as per user request

            // Load faculties into ComboBox
            var faculties = dbContext.Faculty.ToList();
            cbxFaculty.DataSource = faculties;
            cbxFaculty.DisplayMember = "FacultyName";
            cbxFaculty.ValueMember = "FacultyID";

            // Load students into DataGridView
            BindGrid();

            // Connect events that might not have been set in the designer
            this.btnAdd.Click += new System.EventHandler(this.btnAdd_Click);
            this.btnEdit.Click += new System.EventHandler(this.btnEdit_Click);
            this.btnDelete.Click += new System.EventHandler(this.btnDelete_Click);
            this.dgvSV.CellClick += new System.Windows.Forms.DataGridViewCellEventHandler(this.dgvSV_CellContentClick);
        }

        private void btnAdd_Click(object sender, EventArgs e)
        {

        }

        private void btnEdit_Click(object sender, EventArgs e)
        {

        }

        private void dgvSV_CellContentClick(object sender, DataGridViewCellEventArgs e)
        {

        }
    }
}
